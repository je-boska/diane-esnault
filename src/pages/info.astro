---
import { documentToHtmlString } from '@contentful/rich-text-html-renderer';
import Layout from '../layouts/Layout.astro';
import { getInfoPage } from '../queries/Info';

const { title, body, backgroundImage, color, backgroundColor } =
  await getInfoPage();
---

<Layout title='Info' nav>
  <main>
    <h1 class='heading single-page-heading'>{title}</h1>
    <div
      class='markdown single-page-body'
      set:html={documentToHtmlString(body.json)}
    >
    </div>
  </main>
</Layout>
