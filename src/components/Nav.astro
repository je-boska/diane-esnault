---
const { categories } = Astro.props;
---

<nav
  class='fixed z-10 top-2 w-full flex justify-center mobile-nav md:text-lg xl:text-xl'
>
  <div class='relative flex flex-wrap lg:pr-4 z-10 font-bold uppercase'>
    {
      categories.map(({ title, slug }) => (
        <div class='group'>
          <a href={`/category/${slug}`}>
            <h3 class='inline'>{title.slice(0, 3)}</h3>
            <h3 class='absolute hidden md:group-hover:block left-0 top-6'>
              {title}
            </h3>
          </a>
          <span class='opacity-20 pl-2 pr-2.5'>|</span>
        </div>
      ))
    }
    <a class='group' href={`/info`}>
      <h3 class='inline'>Info</h3>
      <h3 class='absolute hidden md:group-hover:block left-0 top-6'>
        & Contact
      </h3>
    </a>
    <span class='opacity-20 pl-2.5 pr-2.5'>|</span>
    <a class='group' href={`/`}>
      <h3>ìÅª</h3>
      <h3 class='absolute hidden md:group-hover:block left-0 top-6'>Home</h3>
    </a>
  </div>
</nav>
