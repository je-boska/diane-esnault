---
const { post } = Astro.props;
const { title, slug, imagesCollection } = post;
---

<div
  class='relative group overflow-hidden flex justify-center items-center w-full lg:w-[calc(50vw-theme(space.8))]'
>
  <div class='w-full'>
    <a href={`/${slug}`}>
      <img
        class='w-full aspect-[4/3] object-cover'
        src={imagesCollection.items[0].url}
        alt=''
      />
      <h2
        class='post-title absolute opacity-100 md:opacity-20 group-hover:opacity-100 transition-opacity top-1/2 -translate-y-1/2 w-full text-center font-serif italic'
      >
        {title}
      </h2>
    </a>
  </div>
</div>
