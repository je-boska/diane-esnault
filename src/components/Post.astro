---
const { post } = Astro.props;
const { title, slug, color, backgroundColor, imagesCollection } = post;
---

<style define:vars={{ color, backgroundColor }}>
  .post {
    color: var(--color);
    background-color: var(--backgroundColor);
  }
</style>

<div
  class='post relative flex justify-center items-center h-screen w-full p-4 border-b-2 border-black'
>
  <div>
    <a href={`/${slug}`}>
      <img
        class='mb-8 max-h-[600px]'
        src={imagesCollection.items[0].url}
        alt=''
      />
      <h2 class='w-full text-3xl xl:text-4xl text-center font-title'>
        {title}
      </h2>
    </a>
  </div>
</div>
